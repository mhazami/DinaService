@using DataStructure
@model IEnumerable<Content>
@{
    ViewBag.Title = ViewBag.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="product-page">


    <div class="head-post " style="background-image: url('/Content/Images/image-01.png');">
        <div class="container">
            <div class="head-post-title">
                <label>دینا سرویس ارائه دهنده ی خدمات تعمیر لوازم خانگی در سراسر تهران</label>
            </div>
            <div class="head-post-content">
                <span></span>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="section-product">
            <div class="row ">
                <div class="mini-header">
                    <span>موارد مطالعاتی</span>
                </div>
                <div class="section-header">
                    <h3>
                        ار بین بردن چالش های تعمیر لوازم خانگی تخصص ماست
                    </h3>
                </div>

                <div class="section-content" >
                    @{
                        foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                                <div class="study-item">
                                    <div>
                                        <img alt="@item.Title" src="@Url.Action("ShowImage","Home",new { id=item.FileId})" />
                                    </div>

                                    <div class="study-item-body">
                                        <h2>@item.Title</h2>
                                        <span>@item.Description.Substring(0, 120) + ...</span>
                                        <a href="@Url.Action("Items","Content",new { area="",id=item.Id,slug=item.Slug})">
                                            <span class="button-c">اطلاعات بیشتر را مشاهده کنید</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }

