@model Brands
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
}

<div class="container">
    <h2>حذف برند </h2>
    @using (Html.BeginForm("Delete", "AdminBrands", FormMethod.Post, new { area = "Admin", @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(model => model.BrandsId)
        <div class="form-group">
            <label class="control-label col-sm-2" for="Title">عنوان :</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Title, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">توضیحات آدرس بار :</label>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Slug, new { @class = "form-control" })

            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-sm-2" for="email">فعال است؟ :</label>
            <div class="col-sm-10">
                @(Model.Enable ? "بله" : "خیر")

            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-danger">حذف</button>
            </div>
        </div>
    }

</div>

