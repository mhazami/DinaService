@model Brands
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
}

<div class="container">
    <h2>تعریف برند جدید</h2>
    @using (Html.BeginForm("Create", "AdminBrands", FormMethod.Post, new { area = "Admin", @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            <label class="control-label col-sm-2" for="Title">عنوان :</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">توضیحات آدرس بار :</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Slug, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">عکس :</label>
            <div class="col-sm-10">
                <input type="file" id="file" name="file" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">فعال است؟ :</label>
            <div class="col-sm-10">
                @Html.RadioButtonFor(model => model.Enable, true)بله
                @Html.RadioButtonFor(model => model.Enable, false)خیر

            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info">ثبت</button>
            </div>
        </div>
    }

</div>
