@model Content
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
}

<div class="container">
    <h2>تعریف مطلب جدید</h2>
    @using (Html.BeginForm("Create", "AdminContent", FormMethod.Post, new { area = "Admin", @class = "form-horizontal", enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">عنوان :</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">عکس :</label>
            <div class="col-sm-10">
                <input type="file" id="file" name="file" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">توضیحات عکس :</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Alt, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">کلمات کلیدی :</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.KeyWords, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">لینک :</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Link, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">توضیحات آدرس بار :</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Slug, new { @class = "form-control" })

            </div>
        </div>



        <div class="form-group">
            <label class="control-label col-sm-2" for="email">موقعیت :</label>
            <div class="col-sm-10">
                @Html.EnumDropDownListFor(model => model.Place, new { @class = "form-control" })

            </div>
        </div>



        <div class="form-group">
            <label class="control-label col-sm-2" for="email">توضیحات :</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control editor" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info">ثبت</button>
            </div>
        </div>
    }

</div>

